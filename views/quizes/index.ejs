<div id="buscador">
	<form method="get" action="/quizes">
		<input type="text" name="search" placeholder="Buscador de Preguntas">
		<input type="submit" value="Buscar">
	</form>
</div>
<table id="preguntas">
	<tr>
		<td colspan="3">Preguntas</td>
		<td>Tipo</td>
		<%if(session.user){%>
		<td>Opciones</td>
		<%}%>
	</tr>
<% for(var i=0; i < quizes.length; i++){ %>
	<tr>
		<td colspan="3">
			<a href="/quizes/<%= quizes[i].id %> "><%= quizes[i].pregunta %></a>
		</td>
		<td>
			<%= quizes[i].tema %>
		</td>
		<%if(session.user){%>
		<td colspan="2">
			<a href="/quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a>

			<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
				<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
					Borrar
				</button>
			</form>

		</td>
		<%}%>
	</tr>
<% } %>
</table>
<%if(session.user){%>
<a href="/quizes/new"><button>Crear Pregunta</button></a>
<%}%>